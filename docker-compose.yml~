version: '3.8'

services:
  db:
    image: postgres:16
    container_name: meu_postgres
    restart: always
    environment:
      POSTGRES_DB: simples_dental
      POSTGRES_USER: admin
      POSTGRES_PASSWORD: admin
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data

volumes:
  postgres_data:
    driver: local
